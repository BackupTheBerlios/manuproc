# $Id: configure.in,v 1.8 2002/07/08 08:26:54 christof Exp $

AC_INIT(src/ArtikelBox.hh)

AM_INIT_AUTOMAKE(Komponenten, 0.4.0)
AM_CONFIG_HEADER(config.h)

AC_PREFIX_DEFAULT(/usr/local)

AC_PROG_CXX
AM_PROG_LIBTOOL
AC_LANG_CPLUSPLUS

AC_SUBST(CFLAGS)
AC_SUBST(CPPFLAGS)
AC_SUBST(LDFLAGS)
AC_SUBST(CXXFLAGS)

AM_PATH_GTKMM(1.2.0,,AC_MSG_ERROR("Gtk-- 1.2.0 or newer not found or broken - see config.log for details."))

GNOME_CONFIG=`which gnome-config`

GNOMEMM_CFLAGS="`$GNOME_CONFIG --cflags gnomemm gnomeui`"
GNOMEMM_LIBS="`$GNOME_CONFIG --libs gnomemm gnomeui`"
AC_SUBST(GNOMEMM_CFLAGS)
AC_SUBST(GNOMEMM_LIBS)

PETIG_CHECK_COMMONXX
PETIG_CHECK_COMMONGTK

KOMPONENTEN_INCLUDES="$COMMONXX_INCLUDES $COMMONGTK_INCLUDES -I\$(top_srcdir)/src"
KOMPONENTEN_LDFLAGS="$COMMONXX_LDFLAGS $COMMONGTK_LDFLAGS"
KOMPONENTEN_LIBS="\$(top_srcdir)/src/libKomponenten.a $COMMONXX_LIBS $COMMONGTK_LIBS"
AC_SUBST(KOMPONENTEN_INCLUDES)
AC_SUBST(KOMPONENTEN_LDFLAGS)
AC_SUBST(KOMPONENTEN_LIBS)

AC_OUTPUT(Makefile src/Makefile examples/Makefile \
	examples/artikelbox/Makefile examples/eingabe/Makefile 
	examples/tree_simplest/Makefile examples/MVC/Makefile)
